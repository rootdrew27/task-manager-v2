{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "./agent/agent.py",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "envFile": "${workspaceFolder}/agent/.env",
            "justMyCode": false
        }
    ]
}